---
// Layout
import Layout from '../../layouts/Layout.astro'

// Sections
import Services from '../../components/sections/riviera/Services.astro'
import Hero from '../../components/sections/riviera/Hero.astro'

// Libs
import { useTranslations } from '../../i18n/utils'
import { getStaticPathsLangs } from '../../libs/getStaticPaths'

import Form from '../../components/sections/riviera/Form.jsx'

// i18n
export const getStaticPaths = getStaticPathsLangs

// Props interface
interface Props {
  lang: string
}

// Get language from params or props
const { lang } = Astro.params as any || Astro.props as any
const t = useTranslations(lang)
---

<Layout>
  <Hero />
  <Form client:load lang={lang} />
  <Services />
</Layout>
