---
// Layout
import Layout from '../../layouts/Layout.astro'

// Sections
import FullWidthMedia from '../../components/ui/FullWidthMedia.astro'
import WhatWeDo from '../../components/sections/WhatWeDo.astro'
import Team from '../../components/sections/TeamMenu'
import SEO from '../../components/utils/SEO.astro'

// Libs
import { useTranslations } from '../../i18n/utils'
import { getStaticPathsLangs } from '../../libs/getStaticPaths'
import Features from '../../components/sections/Features.astro'

// i18n
export const getStaticPaths = getStaticPathsLangs
const { lang } = Astro.params as any
const t = useTranslations(lang)
---

<Layout>
  <SEO currentPage='about' />
  <FullWidthMedia
    src='/videos/about.mp4'
    isVideo={true}
  />
  <WhatWeDo />

  <Features/>
  <Team
    client:load
    lang={lang}
  />
</Layout>
