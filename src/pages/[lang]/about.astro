---
// Layout
import Layout from '../../layouts/Layout.astro'

// Sections
import FullWidthVideo from '../../components/ui/FullWidthVideo.astro'
import FullWidthYoutube from '../../components/ui/FullWidthYoutube.astro'
import WhatWeDo from '../../components/sections/WhatWeDo.astro'
import Team from '../../components/sections/TeamMenu'

// Libs
import { useTranslations } from '../../i18n/utils'
import { getStaticPathsLangs } from '../../libs/getStaticPaths'

// i18n
export const getStaticPaths = getStaticPathsLangs
const { lang } = Astro.params as any
const t = useTranslations(lang)
---

<Layout>
  <FullWidthVideo
    src='/videos/about.mp4'
  />
  <WhatWeDo />
  <Team
    client:load
    lang={lang}
  />
  <FullWidthYoutube
    youtubeSrc="https://www.youtube.com/embed/sw8bLAGqsDo"
  />
</Layout>
