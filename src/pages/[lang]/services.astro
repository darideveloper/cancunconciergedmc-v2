---
// Layout
import Layout from '../../layouts/Layout.astro'

// Sections
import FullWidthVideo from '../../components/ui/FullWidthVideo.astro'
import ServicesMenu from '../../components/sections/ServicesMenu.astro'
import ServicesCards from '../../components/sections/ServicesCards.astro'

// New Service Cards
import ServeCard from '../../components/ui/ServeCard.astro'

// Why Work With Us Alternatives
import WhyWorkWithUsA from '../../components/sections/WhyWorkWithUsA.astro'
import WhyWorkWithUsB from '../../components/sections/WhyWorkWithUsB.astro'
import WhyWorkWithUsC from '../../components/sections/WhyWorkWithUsC.astro'

// Icons
import {
  MdBusiness,
  MdEvent,
  MdGroups,
  MdDirectionsCar,
  MdHotel,
  MdRestaurant,
  MdSportsSoccer,
  MdBeachAccess,
  MdLocalAirport,
} from 'react-icons/md'

// Libs
import { useTranslations } from '../../i18n/utils'
import { getStaticPathsLangs } from '../../libs/getStaticPaths'

// i18n
export const getStaticPaths = getStaticPathsLangs
const { lang } = Astro.params as any
const t = useTranslations(lang)

// Data for ServeCard components
const serveCardData = [
  {
    icon: MdGroups,
    title: 'Group Activities',
    items: [
      'Team Building',
      'Corporate Retreats',
      'Educational Tours',
      'Adventure Activities',
      'Cultural Experiences',
      'Wellness Programs',
      'Networking Events',
      'Leadership Workshops'
    ]
  },
  {
    icon: MdBeachAccess,
    title: 'Leisure & Entertainment',
    items: [
      'Beach Activities',
      'Spa Services',
      'Entertainment Shows',
      'Nightlife Tours',
      'Shopping Experiences',
      'Cultural Tours',
      'Photography Sessions',
      'Relaxation Packages'
    ]
  },
  {
    icon: MdLocalAirport,
    title: 'Travel & Logistics',
    items: [
      'Flight Arrangements',
      'Travel Planning',
      'Itinerary Management',
      'Documentation Support',
      'Insurance Services',
      'Emergency Assistance',
      'Multi-Destination Tours',
      'Custom Travel Packages'
    ]
  }
]
---

<Layout>
  <FullWidthVideo src='/videos/services.mp4' />
  <ServicesMenu />
  <ServicesCards />

  <!-- ServeCard Section -->
  <section class:list={['container', 'mt-20', 'mb-16']}>
    <div class:list={['text-center', 'mb-12']}>
      <h2 class:list={['text-3xl', 'font-bold', 'text-blue', 'font-title', 'mb-4']}>
        Activities & Logistics
      </h2>
      <p class:list={['text-gray-600', 'font-sans', 'max-w-2xl', 'mx-auto']}>
        Complete travel and activity solutions for groups and individuals
      </p>
    </div>

    <div
      class:list={[
        'grid',
        'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
        'gap-8',
        'max-w-7xl',
        'mx-auto',
      ]}
    >
      {serveCardData.map((data) => (
        <ServeCard
          icon={data.icon}
          title={data.title}
          items={data.items}
        />
      ))}
    </div>
  </section>

  <!-- Why Work With Us - Design Alternative A -->
  <WhyWorkWithUsA />

  <!-- Why Work With Us - Design Alternative B -->
  <WhyWorkWithUsB />

  <!-- Why Work With Us - Design Alternative C -->
  <WhyWorkWithUsC />
</Layout>
