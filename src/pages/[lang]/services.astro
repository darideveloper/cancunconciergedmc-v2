---

<Layout>
  <FullWidthVideo src='/videos/services.mp4' />
  <ServicesMenu />
  <ServicesCards />
  
  <!-- ServeCardA Section -->
  <section class:list={['container', 'mt-16']}>
    <div class:list={['text-center', 'mb-12']}>
      <h2 class:list={['text-3xl', 'font-bold', 'text-blue', 'font-title', 'mb-4']}>
        Professional Services
      </h2>
      <p class:list={['text-gray-600', 'font-sans', 'max-w-2xl', 'mx-auto']}>
        Comprehensive solutions for all your corporate and business needs
      </p>
    </div>

    <div
      class:list={[
        'grid',
        'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
        'gap-8',
        'max-w-7xl',
        'mx-auto',
      ]}
    >
      {serveCardAData.map((data) => (
        <ServeCardA
          icon={data.icon}
          title={data.title}
          items={data.items}
        />
      ))}
    </div>
  </section>

  <!-- ServeCardB Section -->
  <section class:list={['container', 'mt-20']}>
    <div class:list={['text-center', 'mb-12']}>
      <h2 class:list={['text-3xl', 'font-bold', 'text-blue', 'font-title', 'mb-4']}>
        Event & Entertainment
      </h2>
