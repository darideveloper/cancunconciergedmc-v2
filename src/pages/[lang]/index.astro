---
// Layout
import Layout from '../../layouts/Layout.astro'

// Sections
import FullWidthYoutube from '../../components/ui/FullWidthYoutube.astro'
import About from '../../components/sections/About.astro'

// Libs
import { useTranslations } from '../../i18n/utils'
import { getStaticPathsLangs } from '../../libs/getStaticPaths'

// i18n
export const getStaticPaths = getStaticPathsLangs

interface Props {
  lang: string
}

// Get language from params or props
const { lang } = Astro.params as any || Astro.props as any
const t = useTranslations(lang)
---

<Layout>
  <FullWidthYoutube
    youtubeSrc='https://www.youtube.com/embed/OAIGoxHJ7bk'
  />
  <About />
</Layout>
