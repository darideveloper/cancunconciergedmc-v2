---
// Layout
import Layout from '../../layouts/Layout.astro'

// Sections
import FullWidthMedia from '../../components/ui/FullWidthMedia.astro'; 
import Testimonials from '../../components/sections/Testimonials.astro';

// Components
import Title from '../../components/ui/Title.astro';

// Libs
import { useTranslations } from '../../i18n/utils'
import { getStaticPathsLangs } from '../../libs/getStaticPaths';

// i18n
export const getStaticPaths = getStaticPathsLangs
const { lang } = Astro.params as any
const t = useTranslations(lang)
---

<Layout>
    <FullWidthMedia src='/videos/about.mp4' isVideo={true} />
    <Testimonials />
    <Title>{t('home.title')}</Title>
</Layout>
