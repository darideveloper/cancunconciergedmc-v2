---
import type { IconType } from 'react-icons/lib'

interface Props {
  icon: IconType
  title: string
  items: string[]
  class?: string
}

const {
  icon: Icon,
  title,
  items,
  class: className = '',
} = Astro.props as Props
---

<article
  class:list={[
    'serve-card-a',
    'bg-white',
    'rounded-2xl',
    'shadow-lg',
    'hover:shadow-2xl',
    'transition-all',
    'duration-300',
    'border',
    'border-gray-100',
    'hover:border-gold',
    'group',
    'h-full',
    'overflow-hidden',
    'relative',
    className,
  ]}
>
  <!-- Header Section with Background -->
  <div
    class:list={[
      'header-section',
      'bg-gradient-to-br',
      'from-blue/10',
      'to-gold/10',
      'group-hover:from-blue/20',
      'group-hover:to-gold/20',
      'p-6',
      'pb-4',
      'transition-all',
      'duration-300',
      'border-b',
      'border-gray-100',
    ]}
  >
    <div class:list={['flex', 'items-center', 'gap-4', 'mb-3']}>
      <!-- Icon Container -->
      <div
        class:list={[
          'icon-container',
          'flex-shrink-0',
          'w-16',
          'h-16',
          'bg-gradient-to-br',
          'from-blue',
          'to-blue/80',
          'group-hover:from-gold',
          'group-hover:to-gold/80',
          'rounded-xl',
          'flex',
          'items-center',
          'justify-center',
          'transition-all',
          'duration-300',
          'shadow-lg',
          'transform',
          'group-hover:scale-105',
        ]}
      >
        <Icon class:list={['text-white', 'text-2xl']} />
      </div>

      <!-- Title -->
      <h3
        class:list={[
          'title',
          'text-xl',
          'font-bold',
          'text-blue',
          'group-hover:text-gold',
          'font-title',
          'transition-colors',
          'duration-300',
          'flex-1',
        ]}
      >
        {title}
      </h3>
    </div>
    
    <!-- Service Count Badge -->
    <div
      class:list={[
        'service-count',
        'inline-flex',
        'items-center',
        'px-3',
        'py-1',
        'bg-blue/20',
        'group-hover:bg-gold/20',
        'text-blue',
        'group-hover:text-gold',
        'rounded-full',
        'text-xs',
        'font-medium',
        'transition-all',
        'duration-300',
      ]}
    >
      {items.length} Services Available
    </div>
  </div>

  <!-- Content Section -->
  <div class:list={['content-section', 'p-6', 'pt-4']}>
    <ul class:list={['services-list', 'space-y-3']}>
      {items.map((item, index) => (
        <li
          class:list={[
            'service-item',
            'flex',
            'items-center',
            'text-gray-700',
            'font-sans',
            'text-sm',
            'leading-relaxed',
            'group-hover:text-gray-800',
            'transition-colors',
            'duration-300',
            'hover:text-blue',
            'cursor-pointer',
          ]}
        >
          <span
            class:list={[
              'item-number',
              'w-6',
              'h-6',
              'bg-gray-100',
              'group-hover:bg-blue/10',
              'text-gray-500',
              'group-hover:text-blue',
              'rounded-full',
              'flex',
              'items-center',
              'justify-center',
              'text-xs',
              'font-medium',
              'mr-3',
              'flex-shrink-0',
              'transition-all',
              'duration-300',
            ]}
          >
            {index + 1}
          </span>
          <span class:list={['item-text', 'flex-1']}>
            {item}
          </span>
        </li>
      ))}
    </ul>
  </div>

  <!-- Footer Section -->
  <div
    class:list={[
      'footer-section',
      'px-6',
      'pb-4',
      'pt-2',
      'border-t',
      'border-gray-50',
      'group-hover:border-gold/20',
      'transition-colors',
      'duration-300',
    ]}
  >
    <div
      class:list={[
        'cta-text',
        'text-xs',
        'text-gray-500',
        'group-hover:text-blue',
        'font-medium',
        'transition-colors',
        'duration-300',
      ]}
    >
      Click to learn more about our services â†’
    </div>
  </div>
</article> 