---
interface Props {
  title: string
  text: string
  titleH2?: boolean
  class?: string
}

const { title, text, titleH2 = false, class: className = '' } = Astro.props as Props

const titleClasses = [
  'title',
  'text-2xl',
  'font-bold',
  'text-blue group-hover:text-gold',
  'mb-2',
  'font-title',
  'transition-colors',
  'duration-300',
]

---

<article
  class:list={[
    'basic-info-card-wrapper',
    'duration-300',
    'shadow-lg',
    'rounded-lg',
    'p-6',
    'bg-white',
    'h-full',
    'flex',
    'flex-col',
    'items-center',
    'justify-center',
    'gap-6',
    className,
  ]}
  data-aos='fade-up'
  data-aos-delay='100'
>
  {titleH2 ? (
    <h2 class:list={titleClasses}>{title}</h2>
  ) : (
    <h3 class:list={titleClasses}>{title}</h3>
  )}
  <p
    class:list={[
      'text',
      'text-gray-700',
      'font-sans',
      'leading-relaxed',
      'text-lg',
      'text-center',
    ]}
  >
    {text}
  </p>
</article>
