---
import clsx from 'clsx';

interface Props {
    imageSrc: String;
    imageAlt: String;
    text: String;
}
const { imageSrc, imageAlt, text } = Astro.props as Props;
---


<img src={imageSrc} alt={imageAlt} 

class={clsx(
    "w-40", 
    "h-40", 
    "object-cover", 
    "rounded-lg", 
    "transition-transform", 
    "duration-300", 
    "hover:scale-105"
  )}/>
<p>texto a escribir: {text}</p>
