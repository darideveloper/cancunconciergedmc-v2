---
import clsx from 'clsx';

interface Props {
    imageSrc: String;
    imageAlt: String;
    name: String;
    quote: String;
}

const { imageSrc,imageAlt,name,quote } = Astro.props as Props;
---

<img 
src={imageSrc} 
alt={imageAlt} 
class={clsx(
    "w-40", 
    "h-40", 
    "object-cover", 
    "rounded-lg", 
    "transition-transform", 
    "duration-300", 
    "hover:scale-105"

  )}/>
<p>Nombre: {name}</p>
<p>Cotizacion: {quote}</p>
