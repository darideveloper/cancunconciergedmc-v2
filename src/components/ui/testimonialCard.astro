---
import clsx from "clsx";

interface Props {
  imageSrc: string;
  imageAlt: string;
  name: string;
  quote: string;
}

const { imageSrc, imageAlt, name, quote } = Astro.props as Props;
---

<div class="duration-300 hover:scale-105 font-oswald w-240">
  <div class="w-240 h-240 overflow-hidden">
    <img
      src={imageSrc}
      alt={imageAlt}
      class={clsx(
        "w-full h-full",
        "object-cover",
        "transition-transform",
        "duration-300",
      )}
    />
  </div>
  <div class="mt-2 p-18 text-center">
    <h3
      class={clsx(
        "w-full",
        "group-hover:scale-105",
        "transition-transform",
        "duration-300",
        "tracking-wide",
        "text-5xl",
      )}
    >
      {name}
    </h3>
    <p
      class={clsx(
        "group-hover:scale-105",
        "transition-transform",
        "duration-300",
        "mt-1",
        "tracking-wide"
      )}
    >
      {quote}
    </p>
  </div>
</div>
