---
import clsx from 'clsx'

interface Props {
  src: string
  isVideo?: boolean
}

const { src, isVideo = false } = Astro.props

const logoSrc = '/logo.webp'
---

<div class={clsx('w-full', 'h-screen', 'relative')}>
  {
    isVideo ? (
      <video
        src={src}
        autoplay
        muted
        loop
        class={clsx('w-screen', 'h-screen', 'object-cover')}
      />
    ) : (
      <img
        src={src}
        alt='Imagen dinÃ¡mica'
        class={clsx('w-screen', 'h-screen', 'block', 'object-cover')}
      />
      <img
        src={logoSrc}
        alt='Logo inferior'
        class={clsx('absolute', 'bottom-5', 'right-10', 'p-4', 'w-auto', 'h-32', 'z-0')}
      />
    )
  }

</div>
