---
// props
interface Props {
  src: string
  bgPlay?: boolean
}

const { src, bgPlay = true } = Astro.props as Props

// Components
import FullWidthMedia from './base/FullWidthMedia.astro'
---

<FullWidthMedia>
  <video
    src={src}
    {...bgPlay
      ? { autoplay: true, muted: true, loop: true }
      : { controls: true }}
    class:list={['w-screen', 'h-screen', 'object-cover', 'parallax']}
  ></video>
</FullWidthMedia>
