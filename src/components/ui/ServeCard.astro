---
import type { IconType } from 'react-icons/lib'

interface Props {
  icon: IconType
  title: string
  items: string[]
  isFirst?: boolean
  class?: string
}

const {
  icon: Icon,
  title,
  items,
  isFirst,
  class: className = '',
} = Astro.props as Props
---

<article
  class:list={[
    'serve-card-c',
    'bg-white',
    'rounded-2xl',
    'shadow-lg hover:shadow-2xl',
    'duration-300',
    'border',
    'border-gray-100  hover:border-gold',
    'group',
    'h-full',
    'overflow-hidden',
    'relative',
    className,
  ]}
>
  <div class:list={['flex', 'h-full']}>
    <!-- Sidebar with Icon -->
    <div
      class:list={[
        'sidebar',
        'w-20',
        'bg-gradient-to-b',
        'from-blue group-hover:from-gold',
        'to-blue/80 group-hover:to-gold/80',
        'flex',
        'flex-col',
        'items-center',
        'justify-center',
        'duration-300',
        'relative',
        'overflow-hidden',
        'transition-colors',
      ]}
    >
      <!-- Background Pattern -->
      <div
        class:list={[
          'absolute',
          'inset-0',
          'opacity-10',
          'bg-[radial-gradient(circle_at_center,rgba(255,255,255,0.3)_0%,transparent_70%)]',
        ]}
      />
      
      <!-- Icon Container -->
      <div
        class:list={[
          'icon-container',
          'relative',
          'z-10',
          'w-12',
          'h-12',
          'bg-white/20',
          'backdrop-blur-sm',
          'rounded-xl',
          'flex',
          'items-center',
          'justify-center',
          'shadow-lg',
          'transform',
          'group-hover:scale-110',
          'duration-300',
        ]}
      >
        <Icon class:list={['text-white', 'text-xl']} />
      </div>
      
      <!-- Service Count -->
      <div
        class:list={[
          'service-count',
          'absolute',
          'bottom-4',
          'left-1/2',
          'transform',
          '-translate-x-1/2',
          'w-8',
          'h-8',
          'bg-white/20',
          'backdrop-blur-sm',
          'rounded-full',
          'flex',
          'items-center',
          'justify-center',
          'text-white',
          'text-xs',
          'font-bold',
          'z-10',
        ]}
      >
        {items.length}
      </div>
    </div>

    <!-- Main Content -->
    <div class:list={['main-content', 'flex-1', 'flex', 'flex-col']}>
      <!-- Header -->
      <div
        class:list={[
          'header',
          'p-6',
          'pb-4',
          'border-b',
          'border-gray-100',
          'bg-gradient-to-r',
          'from-gray-50/50',
          'to-white',
        ]}
      >
        <h3
          class:list={[
            'title',
            'text-xl',
            'font-bold',
            'text-blue group-hover:text-gold',
            'font-title',
            'duration-300',
            'mb-2',
          ]}
        >
          {title}
        </h3>
        
        <div
          class:list={[
            'category-badge',
            'inline-flex',
            'items-center',
            'px-2',
            'py-1',
            'bg-blue/10 group-hover:bg-gold/10',
            'text-blue group-hover:text-gold',
            'rounded-md',
            'text-xs',
            'font-medium',
            'duration-300',
          ]}
        >
          Professional Services
        </div>
      </div>

      <!-- Services List -->
      <div class:list={['services-list', 'flex-1', 'p-6', 'pt-4']}>
        <div class:list={['space-y-3', isFirst && 'lg:flex', 'flex-wrap', 'gap-3', 'justify-start', 'items-start']}>
          {items.map((item, index) => (
            <div
              class:list={[
                'service-item',
                'flex',
                'items-center',
                'group/item',
                'hover:bg-gray-50',
                'rounded-lg',
                'p-3',
                'duration-200',
                'cursor-pointer',
                isFirst && 'lg:min-w-52 xl:min-w-64 ',
              ]}
            >
              <!-- Item Number -->
              <div
                class:list={[
                  'item-number',
                  'w-6',
                  'h-6',
                  'bg-gray-100 group-hover/item:bg-blue/20',
                  'text-gray-500 group-hover/item:text-blue',
                  'rounded-full',
                  'flex',
                  'items-center',
                  'justify-center',
                  'text-xs',
                  'font-medium',
                  'mr-3',
                  'flex-shrink-0',
                  'duration-200',
                ]}
              >
                {index + 1}
              </div>
              
              <!-- Item Text -->
              <span
                class:list={[
                  'item-text',
                  'text-gray-700 group-hover/item:text-gray-900',
                  'font-sans',
                  'text-sm',
                  'font-medium',
                  'duration-200',
                  'flex-1',
                  'mr-4',
                ]}
              >
                {item}
              </span>
              
              <!-- Hover Indicator -->
              <div
                class:list={[
                  'hover-indicator',
                  'w-2',
                  'h-2',
                  'bg-gray-300 group-hover/item:bg-blue',
                  'rounded-full',
                  'opacity-0 group-hover/item:opacity-100',
                  'duration-200',
                ]}
              />
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</article> 