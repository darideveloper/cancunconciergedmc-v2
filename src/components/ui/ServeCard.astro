---
// Props
interface Props {
  title: string
  items: string[]
  isFirst?: boolean
  key?: string
  class?: string
}

const {
  title,
  items,
  isFirst,
  key,
  class: className = '',
} = Astro.props as Props
---

<article
  class:list={[
    'serve-card-c',
    'bg-white',
    'rounded-2xl',
    'shadow-lg',
    'border',
    'border-gray-100',
    'h-full',
    'overflow-hidden',
    'relative',
    className,
  ]}
  id={key}
>
  <div class:list={['flex', 'flex-col', 'h-full']}>
    <!-- Header -->
    <div
      class:list={[
        'header',
        'p-6',
        'pb-4',
        'border-b',
        'border-gray-100',
        'bg-gradient-to-r',
        'from-gray-50/50',
        'to-white',
      ]}
    >
      <h3
        class:list={[
          'title',
          'text-xl',
          'font-bold',
          'text-blue',
          'font-title',
          'mb-2',
        ]}
      >
        {title}
      </h3>
    </div>

    <!-- Services List -->
    <div class:list={['services-list', 'flex-1', 'p-6', 'pt-4']}>
      <div class:list={['space-y-3', isFirst && 'lg:flex', 'flex-wrap', 'gap-3', 'justify-start', 'items-start']}>
        {items.map((item, index) => (
          <div
            class:list={[
              'service-item',
              'flex',
              'items-center',
              'rounded-lg',
              'p-3',
              isFirst && 'lg:min-w-52 xl:min-w-64 ',
            ]}
            data-aos='fade-up'
            data-aos-delay={index * 100}
          >
            <!-- Item Dot -->
            <div
              class:list={[
                'item-dot',
                'w-2',
                'h-2',
                'bg-gray-400',
                'rounded-full',
                'mr-3',
                'flex-shrink-0',
              ]}
            />
            
            <!-- Item Text -->
            <span
              class:list={[
                'item-text',
                'text-gray-700',
                'font-sans',
                'text-sm',
                'font-medium',
                'flex-1',
              ]}
            >
              {item}
            </span>
          </div>
        ))}
      </div>
    </div>
  </div>
</article> 