---
import type { IconType } from 'react-icons/lib'

interface Props {
  icon: IconType
  title: string
  text: string
  href: string
  class?: string
}

const {
  icon: Icon,
  title,
  text,
  href,
  class: className = '',
} = Astro.props as Props
---

<article
  class:list={[
    'service-card-wrapper',
    'hover:scale-105',
    'duration-300',
    className,
  ]}
>
  <a
    href={href}
    class:list={[
      'service-card',
      'flex',
      'flex-col sm:flex-row',
      'items-center',
      'gap-6',
      'p-6',
      'bg-white',
      'rounded-lg',
      'shadow-lg hover:shadow-xl',
      'transition-all',
      'duration-300',
      'border-l-4',
      'border-gold hover:border-blue',
      'group',
      'mx-auto',
      'block',
      'no-underline hover:no-underline',
      'h-full',
    ]}
  >
    <!-- Icon Container -->
    <div
      class:list={[
        'icon-container',
        'flex-shrink-0',
        'w-16',
        'h-16',
        'bg-blue group-hover:bg-gold',
        'rounded-full',
        'flex',
        'items-center',
        'justify-center',
        'transition-colors',
        'duration-300',
      ]}
    >
      <p
        class:list={[
          'text-4xl',
          'text-white',
          'flex',
          'items-center',
          'justify-center',
          '!mb-0',
        ]}
      >
        <Icon />
      </p>
    </div>

    <!-- Content -->
    <div class:list={['content', 'flex-1']}>
      <h3
        class:list={[
          'title',
          'text-xl',
          'font-bold',
          'text-blue group-hover:text-gold',
          'mb-2',
          'font-title',
          'transition-colors',
          'duration-300',
        ]}
      >
        {title}
      </h3>
      <p class:list={['text', 'text-gray-700', 'font-sans', 'leading-relaxed']}>
        {text}
      </p>
    </div>
  </a>
</article>
