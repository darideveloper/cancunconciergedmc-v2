---
// Components
import Title from '../ui/Title.astro'

// Libs
import clsx from 'clsx'
import { useTranslations } from '../../i18n/utils'
import { marked } from 'marked'

// i18n
const { lang } = Astro.params as any
const t = useTranslations(lang)

// Data
const text = marked(t('whatWeDo.text'))
---

<section class={clsx('container')} id="what-we-do">
  <Title isH1={true}>{t('whatWeDo.title')}</Title>
  <div
    data-aos="fade-down"
  >
    <div
      class={clsx('md-content')}
      set:html={text}
    />
  </div>
</section>
