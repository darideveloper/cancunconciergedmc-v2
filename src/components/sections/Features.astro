---
import InfoCircleCard from "../ui/InfoCircleCard.astro";

//i18n
import { useTranslations } from "../../i18n/utils";

const { lang } = Astro.params as any;
const t = useTranslations(lang);

import clsx from "clsx";

//datos
const features = [
    {
        title: "Excelencia en el servicio",
        imageAlt: "info de ",
        text: "Inspirados por una trayectoria de más de dos décadas en hospitalidad de lujo, en Cancun Concierge nos comprometemos a anticipar necesidades, cuidar cada detalle y superar expectativas en cada experiencia.",
        descripcion: "Servicio Personalizado: Cada detalle se adapta a tus necesidades. Flexibilidad Inigualable: Nos ajustamos fácilmente a cambios de último momento."
    },
    {
        title: "Personalización Auténtica",
        imageAlt: "info de ",
        text: "Cada cliente es único. Por eso, diseñamos programas completamente a la medida, asegurándonos de que cada momento esté alineado con los deseos, prioridades y estilo de cada huésped.",
        descripcion: "Anticipación de Necesidades: Superamos expectativas para crear experiencias sin contratiempos."
    },
    {
        title: "Pasión por Crear Experiencias Memorables",
        imageAlt: "info de ",
        text: "Nuestra colaboración con startups tecnológicas y proyectos turísticos innovadores nos impulsa a mantenernos a la vanguardia en soluciones personalizadas y experiencias únicas.",
        descripcion: "Precios Justos y Transparentes: Calidad premium a tarifas competitivas. Gestión Integral de Eventos: Desde el concepto hasta la ejecución, nos encargamos de todo."
    },
];


---
<section
  id="infoCircleCard"
  class={clsx("container", "flex", "flex-col", "gap-10")}
>
  {
    features.map((circle, index) => (
      <div
        class={clsx(
          "flex",
          "flex-col md:flex-row",
          "items-center",
          "gap-4",
          "mx-30", // Añadido margen en los lados para centrar más los elementos
          index % 2 === 1 ? "md:flex-row" : "md:flex-row-reverse scale-110"
        )}
      >
        <InfoCircleCard
          imageBgSrc={`/infoCircle/${circle.title} bg.webp`}
          imageTopSrc={`/infoCircle/${circle.title}.webp`}
          imageAlt={`${circle.imageAlt}${circle.title}`}
          title={circle.title}
          text={circle.text}
          class="h-72 w-72"
        />

        <p 
          class={clsx(
            "w-full", 
            index === 1 ? "md:w-1/2" : "md:w-1/3", // Ancho según el índice
            "max-w-md text-sm text-gray-700 px-4",
            "text-center", // Asegura que el texto esté centrado por defecto
            index === 0 || index === 2 ? "md:text-center" : "md:text-left" // Solo alinear a la izquierda el texto en los extremos
          )}
        >
          {circle.descripcion}
        </p>
      </div>
    ))
  }
</section>




