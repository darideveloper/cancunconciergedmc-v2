---
import LinksMenu from './base/LinksMenu.astro'

// Libs
import { useTranslations } from '../../i18n/utils'

// i18n
const { lang } = Astro.params as any
const t = useTranslations(lang)

// Data
import { clientsItemsIcons } from '../../data/clients'

// Data
const menuItems = Object.keys(clientsItemsIcons)
const menuItemsLang = menuItems.map((item) => {
    return {
        "text": t(`clients.cards.${item}.title`),
        "url": `#${item}`
    }
})
---

<LinksMenu 
    menuItems={menuItemsLang}
    title={t('clients.title')}
    imageSrc='/clients.webp'
    imageAlt={t('clients.imageAlt')}
    id='clients'
/>
