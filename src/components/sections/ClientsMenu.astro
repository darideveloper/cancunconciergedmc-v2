---
import LinksMenu from './base/LinksMenu.astro'

// Libs
import { useTranslations } from '../../i18n/utils'

// i18n
const { lang } = Astro.params as any
const t = useTranslations(lang)

const menuItems = [
    'weddings',
    'social',
    'board',
    'executive',
    'congresses',
    'incentive',
    'president',
    'family',
    'special',
]

const menuItemsLang = menuItems.map((item) => {
    return t(`clients.menuItems.${item}`)
})
---

<LinksMenu 
    menuItems={menuItemsLang}
    title={t('clients.title')}
    baseMessage={t('clients.baseMessage')}
    imageSrc='/clients.webp'
    imageAlt={t('clients.imageAlt')}
    id='clients'
/>
