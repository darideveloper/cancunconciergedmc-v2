---
import LinksMenu from './base/LinksMenu.astro'

// Libs
import { useTranslations } from '../../i18n/utils'

// i18n
const { lang } = Astro.params as any
const t = useTranslations(lang)

// data
import { servicesItemsIcons } from '../../data/servcies'
const servicesItems = Object.keys(servicesItemsIcons)

const menuItemsLang = servicesItems.map((item) => {
    return {
        "text": t(`services.menuItems.${item}`),
        "url": `#${item}`
    }
})
---

<LinksMenu 
    menuItems={menuItemsLang}
    title={t('services.title')}
    imageSrc='/services.webp'
    imageAlt={t('services.imageAlt')}
    id='services'
    target='_self'
/>
