    <div
      class:list={[
        'grid',
        'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
        'gap-8',
        'space-y-8',
      ]}
    >
      {whyWorkWithUsData.map((data) => (
        <FeatureCard
          icon={data.icon}
          title={data.title}
          description={data.description}
          category={data.category}
