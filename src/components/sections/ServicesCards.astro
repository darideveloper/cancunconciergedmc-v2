---
// Components
import ServiceCard from '../ui/ServiceCard.astro'

// Icons
import {
  MdAirplanemodeActive,
  MdDirectionsBoat,
  MdGolfCourse,
  MdGroups2,
  MdLocalHospital,
  MdOutlineStarPurple500,
  MdCameraAlt,
} from 'react-icons/md'
---

<!-- Service Cards Section -->
<section class='container py-16'>
  <div class='text-center mb-12'>
    <h2 class='text-4xl font-bold text-[var(--color-blue)] font-title mb-4'>
      Our Premium Services
    </h2>
    <p class='text-gray-600 font-sans max-w-2xl mx-auto'>
      Discover our exceptional service approach, designed to provide
      unforgettable experiences tailored to your needs.
    </p>
  </div>

  <div class='grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto'>
    <ServiceCard
      icon={MdAirplanemodeActive}
      title='Airport Transfers'
      text='Professional and reliable airport transportation services with meet & greet, ensuring a seamless arrival experience in Cancun and the Riviera Maya.'
      href='/contact'
    />

    <ServiceCard
      icon={MdDirectionsBoat}
      title='Yacht Experiences'
      text='Luxury yacht charters and water activities for unforgettable moments on the Caribbean Sea, perfect for special occasions and corporate events.'
      href='/contact'
    />

    <ServiceCard
      icon={MdGolfCourse}
      title='Golf & Excursions'
      text="Premium golf experiences and curated group excursions showcasing the best of the region's natural beauty and cultural attractions."
      href='/contact'
    />
  </div>
</section> 