---
// Components
import Title from '../ui/Title.astro'
import ServiceCard from '../ui/ServiceCard.astro'

// Icons
import {
  MdAirplanemodeActive,
  MdDirectionsBoat,
  MdGolfCourse,
  MdGroups2,
  MdLocalHospital,
  MdOutlineStarPurple500,
  MdCameraAlt,
} from 'react-icons/md'

// Libs
import { useTranslations } from '../../i18n/utils'

// i18n
const { lang } = Astro.params as any
const t = useTranslations(lang)

// Services data with icons mapping
const serviceIcons = {
  transfers: MdAirplanemodeActive,
  yacht: MdDirectionsBoat,
  golf: MdGolfCourse,
  teambuilding: MdGroups2,
  desk: MdLocalHospital,
  entertainment: MdOutlineStarPurple500,
  photography: MdCameraAlt,
}

// Get services from translations
const serviceKeys = Object.keys(serviceIcons)
const services = serviceKeys.map((key) => ({
  icon: serviceIcons[key as keyof typeof serviceIcons],
  title: t(`services.menuCards.${key}.title`),
  text: t(`services.menuCards.${key}.text`),
  href: '/contact',
}))
---

<!-- Service Cards Section -->
<section class:list={['container']}>
  <div class:list={['text-center', 'mb-12']}>
    <Title class:list={['!text-center']}>{t('services.title')}</Title>
    <p class:list={['text-gray-600', 'font-sans', 'max-w-4xl', 'mx-auto']}>
      At Cancun Concierge DMC, we offer a curated selection of premium services
      designed to elevate your group's experience in Cancun and the Riviera
      Maya. From seamless airport arrivals to one-of-a-kind private events, our
      team delivers tailor-made solutions with precision, creativity, and a
      Ritz-Carlton-level commitment to hospitality. Whether you are planning a
      corporate incentive trip, an executive retreat, or a special celebration,
      we bring over 20 years of experience, insider knowledge, and a highly
      personalized approach to everything we do.
    </p>
  </div>

  <div
    class:list={[
      'grid',
      'grid-cols-1 md:grid-cols-2 xl:grid-cols-3',
      'gap-8',
      'max-w-7xl',
      'mx-auto',
    ]}
  >
    {
      services.map((service) => (
        <ServiceCard
          icon={service.icon}
          title={service.title}
          text={service.text}
          href={service.href}
          class:list={['h-full', 'last:xl:col-span-2 first:md:col-span-2']}
        />
      ))
    }
  </div>
</section>

